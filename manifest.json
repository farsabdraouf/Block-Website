{
  "manifest_version": 2,
  "name": "مانع المواقع",
  "version": "1.5",
  "description": "قم بحظر او السماح بمواقع محددة بكل سهولة",
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["js/background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
    "512": "img/sign.png"
    }
  },
  "icons": {
    "512": "img/sign.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "website-blocker@example.com",
      "strict_min_version": "58.0"
    }
  }
}
